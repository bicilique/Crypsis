# Example .env configuration with OpenTelemetry and observability features

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=crypsis
DB_SSLMODE=disable

# Storage Configuration (MinIO)
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STRORAGE_SSL=false
BUCKET_NAME=crypsis-files

# Encryption Configuration
MKEY_PATH=./resources/master.key
HASH_METHOD=SHA256
ENC_METHOD=AES256_GCM
HASH_ENCRYPTED_FILE=true

# Hydra OAuth2 Configuration
HYDRA_PUBLIC_URL=http://localhost:4444
HYDRA_ADMIN_URL=http://localhost:4445

# KMS Configuration (Optional)
KMS_ENABLE=false
KMS_KEY_UID=your-key-uid
KMS_URL=https://kms.example.com
KEY_PATH=./cosmian/kms.key
CERT_PATH=./cosmian/kms.crt
CA_PATH=./cosmian/kms.crt

# OpenTelemetry Configuration (Optional)
OTEL_ENABLE=true
OTEL_ENDPOINT=localhost:4318

# Service Identification
SERVICE_NAME=crypsis-backend
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Server Configuration
PORT=8080
GIN_MODE=release

# Development Mode
DEVELOPER_HOST=true
